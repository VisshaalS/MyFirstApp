                android:layout_height="match_parent"
                android:id="@+id/relative"
                >

                <LinearLayout
                    android:id="@+id/horizontalLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="930dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/timesHeader"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="@string/Times"
                        android:textStyle="bold"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/sundayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Sunday"
                        android:textStyle="bold"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/mondayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Monday"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/tuesdayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Tuesday"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/wednesdayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Wednesday"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/thursdayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Thursday"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/fridayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Friday"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/saturdayHeader"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="@string/Saturday"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black" />
                </LinearLayout>

                <!--start it 30dp from the top for now. Once headers are fully changed then change the marginTop and the width-->

                <!--vertical scroll view-->


                <LinearLayout
                    android:id="@+id/verticalLinearLayout"
                    android:layout_width="575dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="parent"
                    android:layout_marginTop="30dp"
                    >
                    <!--8 am divide line-->
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@android:color/black"
                        />

                    <!--8 am-->
